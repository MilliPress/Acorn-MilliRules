{
  "name": "millipress/acorn-millirules",
  "description": "Acorn integration for MilliRules â€” route-aware conditions, actions & rules with CLI management",
  "type": "library",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Philipp Wellmer",
      "homepage": "https://millipress.com"
    }
  ],
  "require": {
    "php": ">=8.1",
    "millipress/millirules": "^0.7",
    "roots/acorn": "^4.0 || ^5.0"
  },
  "require-dev": {
    "laravel/pint": "^1.0",
    "phpstan/phpstan": "^2.0",
    "pestphp/pest": "^4.0",
    "orchestra/testbench": "^10.9"
  },
  "autoload": {
    "psr-4": {
      "MilliRules\\Acorn\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MilliRules\\Acorn\\Tests\\": "tests/"
    }
  },
  "extra": {
    "acorn": {
      "providers": [
        "MilliRules\\Acorn\\ServiceProvider"
      ]
    }
  },
  "scripts": {
    "lint": "pint --test",
    "lint:fix": "pint",
    "phpstan": "phpstan analyze",
    "test": "pest"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
